{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JournAi",
  "version": "0.1.0",
  "identifier": "com.younesbenketira.journai",
  "build": {
    "beforeDevCommand": "cd ../.. && pnpm --filter @journai/mobile dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "cd ../.. && pnpm --filter @journai/mobile build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://api.openai.com"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:journai.db"]
    }
  }
}
