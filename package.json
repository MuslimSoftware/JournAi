{
  "name": "journai-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:desktop": "turbo run dev --filter=@journai/desktop",
    "dev:mobile": "turbo run dev --filter=@journai/mobile",
    "build:desktop": "turbo run build --filter=@journai/desktop",
    "build:mobile": "turbo run build --filter=@journai/mobile",
    "tauri:dev:desktop": "cd apps/desktop && bun run tauri dev",
    "tauri:dev:ios": "cd apps/mobile && bun run tauri ios dev",
    "tauri:dev:android": "cd apps/mobile && bun run tauri android dev",
    "tauri:build:desktop": "cd apps/desktop && bun run tauri build",
    "tauri:build:ios": "cd apps/mobile && bun run tauri ios build",
    "tauri:build:android": "cd apps/mobile && bun run tauri android build"
  },
  "dependencies": {
    "@ax-llm/ax": "^16.0.10",
    "@tanstack/react-virtual": "^3.13.13",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "^2.3.1",
    "@tauri-apps/plugin-store": "^2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.26.2",
    "levenshtein-search": "^0.1.2",
    "react": "^19.1.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.2.0",
    "streamdown": "^1.6.11"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "esbuild": "^0.27.2",
    "jsdom": "^25.0.1",
    "turbo": "^2.3.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.0"
}
