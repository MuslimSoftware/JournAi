{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-execute",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$DOCUMENT/**" }, { "path": "$HOME/**" }]
    },
    "mcp-bridge:default"
  ]
}
