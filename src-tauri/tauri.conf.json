{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "journai",
  "version": "0.1.1",
  "identifier": "com.younesbenketira.journai",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "journai",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://api.openai.com"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZCNzRGNzQ4OTJEMTQ3MzYKUldRMlI5R1NTUGQwKzQwR01DQnh6aGxIb2kvRHJnTUxyM1c5dzdSRzNZeWpwamo0cjYrZXdKanoK",
      "endpoints": [
        "https://github.com/MuslimSoftware/JournAi/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
